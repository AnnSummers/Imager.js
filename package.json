{
  "name": "imager.js",
  "version": "0.5.0",
  "description": "Imager.js is an alternative solution to the issue of how to handle responsive image loading, created by developers at BBC News.",
  "main": "./Imager.js",
  "scripts": {
    "test": "NODE_ENV=test ./node_modules/karma/bin/karma start",
    "pretest": "npm run build",
    "posttest": "jshint index.js ./src",
    "test:watch": "NODE_ENV=test ./node_modules/karma/bin/karma start --auto-watch --no-single-run",
    "build": "NODE_ENV=production browserify -e ./index.js -s imager -t babelify -t envify | uglifyjs - -c -b 'indent-level=2' -o Imager.js",
    "build:watch": "NODE_ENV=development watchify -dv -e ./index.js -t babelify -t envify -o Imager.js",
    "watch": "npm-run-all --parallel build:watch test:watch"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/BBC-News/Imager.js.git"
  },
  "keywords": [
    "responsive",
    "srcset",
    "images",
    "resize",
    "polyfill",
    "shim",
    "img",
    "PictureFill"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-preset-es2015": "^6.2.0",
    "babelify": "^7.2.0",
    "browserify": "^12.0.0",
    "envify": "^3.4.0",
    "expect.js": "^0.3.0",
    "jquery": "^1.10.2",
    "jshint": "^2.9.1-rc1",
    "karma": "^0.13.0",
    "karma-browserify": "^4.4.2",
    "karma-browserstack-launcher": "^0.1.1",
    "karma-expect": "^1.0.0",
    "karma-firefox-launcher": "^0.1.7",
    "karma-html2js-preprocessor": "^0.1.0",
    "karma-ievms": "^0.1.0",
    "karma-mocha": "^0.2.0",
    "karma-phantomjs-launcher": "^0.2.0",
    "karma-sinon": "^1.0.3",
    "mocha": "^2.0.0",
    "npm-run-all": "^1.3.3",
    "phantomjs": "^1.9.19",
    "sinon": "^1.8.1",
    "uglify-js": "^2.6.1",
    "watchify": "^3.6.1"
  },
  "dependencies": {}
}
